{
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "babelOptions": {
      "parserOpts": {
        "plugins": [
          "flow",
          "jsx"
        ]
      }
    }
  },
  "plugins": [
    "flow-type"
  ],
  "rules": {
    "flow-type/boolean-style": [
      2,
      "boolean"
    ],
    "flow-type/define-flow-type": 1,
    "flow-type/delimiter-dangle": 0,
    "flow-type/generic-spacing": [
      2,
      "never"
    ],
    "flow-type/no-mixed": 0,
    "flow-type/no-types-missing-file-annotation": 2,
    "flow-type/no-weak-types": 0,
    "flow-type/require-parameter-type": 0,
    "flow-type/require-readonly-react-props": 0,
    "flow-type/require-return-type": 0,
    "flow-type/require-valid-file-annotation": 0,
    "flow-type/semi": 0,
    "flow-type/space-after-type-colon": [
      2,
      "always"
    ],
    "flow-type/space-before-generic-bracket": [
      2,
      "never"
    ],
    "flow-type/space-before-type-colon": [
      2,
      "never"
    ],
    "flow-type/type-id-match": 0,
    "flow-type/union-intersection-spacing": [
      2,
      "always"
    ],
    "flow-type/use-flow-type": 1
  },
  "settings": {
    "flow-type": {
      "onlyFilesWithFlowAnnotation": false
    }
  }
}
